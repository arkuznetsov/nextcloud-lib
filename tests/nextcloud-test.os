	ПутьКФайлуДляСохранения = ОбъединитьПути(ВремКаталог, "downloadedFile1.txt");

	Сервис.Файлы().Получить(ПутьКФайлуДляПолучения, ПутьКФайлуДляСохранения);

	СписокФайлов = Сервис.Файлы().Список(ИмяТестовогоКаталога);

	Текст = Новый ТекстовыйДокумент();
	Текст.Прочитать(ПутьКФайлуДляСохранения);

	ТекстОшибки = СтрШаблон("Ошибка получения файла ""%1""", ПутьКФайлуДляПолучения);

	Утверждения.ПроверитьРавенство(СокрЛП(Текст.ПолучитьТекст()), ТекстДляПроверки, ТекстОшибки);

	УдалитьФайлы(ВремКаталог);

